{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash",
      "Grep(**)",
      "Glob(**)",
      "NotebookEdit(**)",
      "NotebookRead(**)",
      "WebFetch",
      "WebFetch(domain:*)",
      "WebSearch",
      "mcp__playwright",
      "mcp__next-devtools",
      "mcp__figma-dev-mode"
    ],
    "deny": [
      "Bash(curl*http://localhost:8080*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits",
    "disableBypassPermissionsMode": "disable"
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["next-devtools", "figma-dev-mode"]
}
