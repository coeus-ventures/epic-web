{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash",
      "Grep(**)",
      "Glob(**)",
      "NotebookEdit(**)",
      "NotebookRead(**)",
      "WebFetch(domain:*)",
      "mcp__playwright"
    ],
    "deny": [
      "Bash(curl*http://localhost:8080*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits",
    "disableBypassPermissionsMode": "disable"
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["next-devtools"]
}
